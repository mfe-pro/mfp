{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["dom", "es2019", "es2020", "es2021", "esnext"],
    "target": "es2019",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@mfp/core": ["dist/mfp"],
      "@mfp/core/*": ["dist/mfp/*"],
      "@mfp/react": ["dist/mfp-react"],
      "@mfp/tailwindcss": ["dist/mfp-tailwindcss"],
      "@mfp/tools": ["tools/src/index.ts"]
    }
  },
  "exclude": ["./node_modules", "./tmp"]
}
